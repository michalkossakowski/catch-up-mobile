@page "/faq"
@inject catch_up_mobile.Services.FAQService faqService

<h3>Frequently Asked Questions</h3>

@if (faqs == null)
{
    <p>Loading...</p>
}
else
{
    <ul>
        @foreach (var faq in faqs)
        {
            <li>
                <strong>@faq.Title</strong><br />
                @faq.Answer
            </li>
        }
    </ul>
}

@code {
    private List<catch_up_mobile.Models.FAQ> faqs;

    protected override async Task OnInitializedAsync()
    {
        faqs = await faqService.GetFAQsAsync();
    }
}
