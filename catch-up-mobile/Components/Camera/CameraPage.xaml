<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="catch_up_mobile.Components.Camera.CameraPage"
             Title="CameraPage">
    <ScrollView>
        <VerticalStackLayout BackgroundColor="#22272b">
            <ActivityIndicator 
                x:Name="LoadingIndicator"
                IsVisible="False"
                IsRunning="False"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Color="White"
            />
            <Image 
                x:Name="CapturedImage"
                HorizontalOptions="Center"
                IsVisible="False"
                />
            <toolkit:CameraView 
                x:Name="CameraView"
                MediaCaptured="CameraView_MediaCaptured"
                HorizontalOptions="Center"
                IsVisible="True"
                IsEnabled="True"
            />
        
            <Button 
                x:Name="CaptureButton"
                BackgroundColor="#0d6efd"
                TextColor="White"
                FontSize="18"
                WidthRequest="200"
                Margin="0,20,0,0"
                Text="Capture Photo"
                HorizontalOptions="Center"
                Clicked="CaptureImage"
            />
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10" Margin="5,20,5,0" x:Name="AfterCaptureButtonGroup" IsVisible="False">
                <Button 
                    BackgroundColor="#0d6efd"
                    TextColor="White"
                    WidthRequest="140"
                    Text="Recapture"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Clicked="Recapture" 
                />
                <Button 
                    BackgroundColor="#198754"
                    TextColor="White"
                    WidthRequest="140"
                    FontSize="18"
                    x:Name="UploadButton"
                    Text="Upload"
                    HorizontalOptions="Center"
                    Clicked="UploadImage"
                />
            </HorizontalStackLayout>
        </VerticalStackLayout> 
    </ScrollView>
</ContentPage>