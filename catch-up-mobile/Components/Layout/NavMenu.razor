            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="localization-panel-admin">
                <i class="bi-geo-alt-fill fs-5" aria-hidden="true"></i> Localization Panel
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="settings">
                <i class="bi-gear fs-5" aria-hidden="true"></i> Settings
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="HandleLogout">
                <i class="bi-box-arrow-right fs-5" aria-hidden="true"></i> Logout
            </NavLink>
        </div>
    </nav>
</div>

@code {
    public string userName = "";

    protected override async Task OnInitializedAsync()
    {
        UserDto user = await DbContext.GetUserAsync();
        userName = $"{user.Name} {user.Surname}";
    }


    private async Task HandleLogout()
    {
        await DbContext.ClearUserAsync();
        NavigationManager.NavigateTo("/", true);
    }
}